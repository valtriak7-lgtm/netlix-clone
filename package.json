{
  "name": "netflix-monorepo",
  "private": true,
  "scripts": {
    "start": "npm --prefix frontend start",
    "frontend": "npm --prefix frontend start",
    "backend": "npm --prefix backend run dev",
    "backend:legacy": "npm --prefix server run dev",
    "dev": "concurrently \"npm --prefix frontend start\" \"npm --prefix backend run dev\"",
    "dev:legacy": "concurrently \"npm --prefix frontend start\" \"npm --prefix server run dev\"",
    "build": "npm --prefix frontend run build",
    "test": "npm --prefix frontend run test"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
